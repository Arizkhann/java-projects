<!DOCTYPE html>
<html>
<head>
<script>
	function show(checkboxId, resultId){
		var checkbox = document.getElementById(checkboxId);
		var resultSpan = document.getElementById(resultId);
		
		if(checkbox.checked){
			resultSpan.innerHTML = "Present";
		}
		else{
			resultSpan.innerHTML = "Absent";
		}
	}
</script>
<meta charset="ISO-8859-1">
<title>Insert title here</title>
</head>
<body>
	<form>
		<center>
			Ariz:
			<input type="checkbox" id="chkAriz" onchange="show('chkAriz', 'resultAriz')" /> <br/><br/>
			<span id="resultAriz"></span>
		</center>
		<center>
			Subudi:
			<input type="checkbox" id="chkSubudi" onchange="show('chkSubudi', 'resultSubudi')" /> <br/><br/>
			<span id="resultSubudi"></span>
		</center>
		<center>
			Anirudh:
			<input type="checkbox" id="chkAnirudh" onchange="show('chkAnirudh', 'resultAnirudh')" /> <br/><br/>
			<span id="resultAnirudh"></span>
		</center>
	</form>
</body>
</html>
